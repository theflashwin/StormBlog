<div class = "form-group">
    <label for = "title"> Title </label>
    <input required type = "text" name = "title" id = "title" class = "form-control" placeholder = "Enter Post Title">
</div>

<div class = "form-group">
    <label for = "title"> Description </label>
    <textarea required name="description" id="description" class="form-control" placeholder = "Enter Post Description"></textarea>
</div>

<div class = "form-group">
    <label for = "title"> Markdown </label>
    <textarea required name="markdown" id="markdown" class="form-control" placeholder = "Enter Post Content (# Denotes Title ## Denotes Small Title)"></textarea>
</div>

<div class = "form-group">
    <label for = "title"> Image URL </label>
    <input required type = "text" name = "image" id = "image" class = "form-control" placeholder = "Enter Image URL or Source - ex: https://stormrobotics.org/assets/img/WorldsPicture.png">
</div>

<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class = "btn btn-primary">Save</button>